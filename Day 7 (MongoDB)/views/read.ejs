<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PracDB</title>
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
      <div class="nav mb-10">
        <a href="/" class="text-blue-500 text-xl">Back to Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-red-500 overflow-hidden">
            <img class="w-full h-full object-cover" src="<%= user.image  %>" alt="image">
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
